/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php 
if($this->canShowBlock()): 
    $block_shop_by = MAGE::helper('ThemeOptions')->getThemeOptions('block_shop_by'); 
?>
<section class="block-layered-nav">
    <header>
        <h2><?php echo $this->__('Shop By') ?></h2>
    </header>
    <div class="block-content">
        <?php echo $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
        <?php endif; ?>
        <?php if($this->canShowOptions()): ?>
            <p class="block-subtitle"><?php echo $this->__('Shopping Options') ?></p>
            <dl <?php if ($block_shop_by['option_2'] == 1): ?> class="closed-default"<?php endif; ?> <?php if ($block_shop_by['option'] == 1): ?> id="layered_navigation_accordion" <?php endif; ?>>
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dt class="filter-label"><?php echo $this->__($_filter->getName()) ?></dt>
                    <dd><?php echo $_filter->getHtml() ?></dd>
                <?php endif; ?>
                <?php endforeach; ?>
            </dl>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        <?php endif; ?>
    </div>
</section>
<?php endif; ?>
