<section class="block-related">
    <header>
        <h2><?php echo $this->__('Related Products') ?></h2>
        <div class="title-divider"><span>&nbsp;</span></div>
    </header>
    <div class="block-content">
        <p class="block-subtitle"><a href="#" onclick="selectAllRelated(this); return false;"><?php echo $this->__('select all') ?></a></p>
        <div <?php if ($productpage_collateral_related == 'related_slider' && count($this->getItems())>4): ?>id="block-related-slider"<?php endif; ?>>
