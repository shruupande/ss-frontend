<?php
    $columns = $this->getColumns();
?>
<table class="data-table" id="wishlist-table">
    <tbody>
        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
                <tr id="item_<?php echo $item->getId();?>">
                    <td>
                        <?php $column_key = 1; $column_max_key = count($columns); foreach ($columns as $column): ?>
                            <?php $column->setItem($item); ?>
                            <?php if($column_key == 1): ?>
                                <div class="product-box">
                                <?php elseif($column_key == 2): ?>
                                <div class="product-item">
                            <?php endif; ?>
                                <?php echo $column->toHtml($item); ?>
                            <?php if($column_key == $column_max_key): ?>
                            </div>
                            <div class="clear"></div>
                            </div>
                            <?php endif; ?>
                        <?php $column_key++; endforeach; ?>
                    </td>
                </tr>
            <?php endforeach ?>
        <?php endif; ?>
    </tbody>
</table>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
//<![CDATA[
    decorateTable('wishlist-table');

<?php foreach ($columns as $column): ?>
    <?php echo $column->getJs();?>
<?php endforeach; ?>
//]]>
</script>
